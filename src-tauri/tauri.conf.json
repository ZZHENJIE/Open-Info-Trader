{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenInfoTrader",
  "version": "0.1.0",
  "identifier": "com.openinfotrader.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Open Info Trader",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 450
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
